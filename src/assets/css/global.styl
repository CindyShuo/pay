$button-color = #0762EA
// 头部样式
.header-left
  display flex
  align-items center
.header-back
  display block
  margin-right 0.42rem
  width 0.16rem
  height auto
.header-text
  line-height 0.45rem
  font-size 0.32rem
  color #232323
  &--button
    color $button-color !important
// 登录、注册样式
.account-page
  background-color #fff
  &__content
    padding 1.36rem 0.5rem 0
    &.is-register
      padding-top 0
    .content-title
      line-height 0.64rem
      font-size 0.45rem
      font-weight 700
      color #1c1c1c
    .content-form
      padding-top 0.52rem
      &.is-register
        padding-top 1.52rem
      .form-input-box
        position relative
        margin-bottom 0.24rem
        &.last
          margin-bottom 0
      .form-input
        display block
        width 100%
        padding 0.2rem 0
        border-bottom 1px solid #EAEAEC
        line-height 0.45rem
        font-size 0.32rem
        color #212121
        &.is-mobile
          padding-left 1.44rem
        &::-webkit-input-placeholder /* WebKit browsers */
          color #A8A8A8
        &::-moz-placeholder /* Mozilla Firefox 19+ */
          color #A8A8A8
        &:-ms-input-placeholder /* Internet Explorer 10+ */
          color #A8A8A8
      .form-nation
        position absolute
        top 50%
        left 0
        transform translateY(-50%)
      .form-sms
        position absolute
        top 50%
        right 0
        transform translateY(-50%)
        line-height 0.4rem
        font-size 0.28rem
        color #A8A8A8
        &.is-abled
          color $button-color
          .text-time
            color #A8A8A8
      .form-button
        display block
        margin-top 0.8rem
        width 100%
        height 0.98rem
        border-radius 0.98rem
        background-color #D1D9E5
        line-height 0.98rem
        font-size 0.32rem
        color #fff
        text-align center
        &.is-abled
          background-color $button-color
    .content-link
      display flex
      align-items center
      margin-top 0.8rem
      .link-text
        margin-right 0.18rem
        line-height 0.4rem
        font-size 0.28rem
        color $button-color
      .link-arrow
        display block
        width 0.2rem
        height 0.12rem
        background-image url('~@/assets/images/arrow.png')
        background-size 100% 100%
        transform rotate(-90deg)
// 缴费页面样式
.pay-page
  min-height 100%
  background-color #EAEAEC
  &__header
    display flex
    justify-content space-between
    height 0.98rem
    padding-left 0.54rem
    padding-right 0.5rem
    .title
      display flex
      align-items center
      .title-img
        margin-right 0.24rem
        width 0.4rem
        height auto
      .title-text
        line-height 0.45rem
        font-size 0.32rem
        color #1C1C1C
    .city
      display flex
      align-items center
      .city-text
        margin-right 0.18rem
        line-height 0.4rem
        font-size 0.28rem
        color #055FE6
      .city-arrow
        display block
        width 0.2rem
        height 0.12rem
        background-image url('~@/assets/images/arrow.png')
        background-size 100% 100%